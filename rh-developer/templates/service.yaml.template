apiVersion: v1
kind: Service
metadata:
  name: ${APP_NAME}
  namespace: ${NAMESPACE}
  labels:
    app: ${APP_NAME}
    app.kubernetes.io/name: ${APP_NAME}
    app.kubernetes.io/component: service
    app.kubernetes.io/part-of: ${APP_NAME}
spec:
  selector:
    app: ${APP_NAME}
  ports:
    - name: http
      port: ${CONTAINER_PORT}
      targetPort: ${CONTAINER_PORT}
      protocol: TCP
  type: ClusterIP
  sessionAffinity: None
